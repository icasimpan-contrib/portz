PNAME=portz_dist
export PNAME

set -e 
#set -x
portz_root=$(pwd)

package=$1

. ${portz_root}/scripts/defs.sh
portz_assert_know_package

inform "prefix      = $prefix"
inform "exec_prefix = $exec_prefix"

. ${portz_scripts}/install_staging.sh

portz_step $(pwd) dist



