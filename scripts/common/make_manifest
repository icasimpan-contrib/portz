. ${portz_root}/scripts/defs.sh

inform "creating manifest file"
manifest_dir=$(dirname $manifest_file)
mkdir -p ${staging_dir}${manifest_dir}

(
    cd ${staging_dir}
    find . -type f | sed -e 'sX^\./XX' > ${staging_dir}${manifest_file}
)

inform "package $package-$version installation consists of $(wc -l < ${staging_dir}${manifest_file}) files"