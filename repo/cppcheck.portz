version=1.47
baseurl=http://downloads.sourceforge.net/sourceforge/cppcheck/cppcheck-${version}.tar.bz2
web=http://cppcheck.wiki.sourceforge.net/

goto_srcdir()
{
    cd cppcheck-${version}
}

install_staging_step()
{
    if [ "$OSTYPE" == "msys" ] ; then
        ${MAKE_PARALLEL} LDFLAGS="-lshlwapi"
    else
        ${MAKE_PARALLEL} 
    fi
    
    ${MAKE} install BIN=${DESTDIR}${exec_prefix}/bin
}
